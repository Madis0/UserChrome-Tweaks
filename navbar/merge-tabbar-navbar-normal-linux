/*
 * Place the navigation bar in the front of the tab bar (normal density, Linux)
 *
 * Contributor(s): Madis0
 */
 
/* Adjust tab bar to get space first */
#TabsToolbar {
    margin-left: 6.4em !important; /* Keep some margin to make toolbar buttons visible */
    padding-left: 34em !important; /* Left margin for nav bar */
    margin-right: 2em !important; /* Right margin for caption button, menu */
    margin-bottom: -0.1em !important; /* Remove bottom border */
}

/* Move nav bar to top left */
#nav-bar {
    margin-top: -2.3em !important; /* Move nav bar up */
    margin-right: 60vw !important; /* Cut it off with defined width */
    margin-bottom: -0.3em !important; /* Remove bottom border */
    background-color: transparent !important; /* Make it use tab bar colors */
}

/* Move menu button to top right */
#PanelUI-button {
    position: fixed; /* Fixed position for menu */
    top: 0.15em; /* Add some margin to top */
    right: 0em; /* Move it to right side (adjust for caption buttons) */
    border-left: none !important; /* Remove menu border */
}
